body {
    font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
    margin : 0;
}

#logo
{
    width: 80px;
    vertical-align: middle;
}

h1, h2, h3, h4, h5, h6 {
    font-weight: normal;
}

h1 {
    text-align:center;
    font-size: 4em;
    font-family: 'Lato', sans-serif;
}

a 
{
    text-decoration: none;
}

header {
    background-color: #4285F4;
    padding : 1em;
    color : #FFFFFF;
    min-height : 100px;
}

.titre {
    position : absolute;
    top : 0.4em;
    left : 0.4em;
}

header p, header h1 {
    margin-top: 0;
}

header h1 {
    margin-bottom : 2px;
}

#tag {
    font-size : 2.4em;
    display: block;
    background: #71A4F7;
    border : 1px solid #3B75D6;
    color : #FFFFFF;
    width: 800px;
    margin: auto;
    margin-bottom: 0.5em;
    padding-left: 5px;
}

/*** PlaceHolder ***/
#tag::-webkit-input-placeholder {
   color: #F0F0F0;
}

#tag:-moz-placeholder { /* Firefox 18- */
   color: #F0F0F0;  
}

#tag::-moz-placeholder {  /* Firefox 19+ */
   color: #F0F0F0;  
}

#tag:-ms-input-placeholder {  
   color: #F0F0F0;  
}
/***  ***/

.options {
    width : 800px;
    margin : auto;
}

.options > * {
    margin: auto 12px;
}


.options input:first-child { 
    margin-left: 0;
}

#score
{
    text-align: center;
    font-size: 3.2em;
    width: 100%;
}

.positif
{
    color: #109618;
}

.negatif
{
    color: #DB4437;
}



#analyse {
    background: #F8F8F8;
}

#analyse .main {
    max-width: 1200px;
    margin: auto;
}

#analyse .main > div {
    display: inline-block;
    vertical-align: top;
    background: white;
    border-radius: 10px;
    border: 1px solid #DCDCDC;
    width: 525px;
    margin: 20px 20px;
    padding: 12.5px;
    min-height: 375px;
}

.main-carousel {
    width: 500px;
    height: 400px;
}

.carousel-cell {
    height: 400px;
}

.carousel-cell img {
    width: 550px;
}


/* tout ce qui sera dans la page d'accueil  */

#home {
    margin:0;
    padding:0;
    background: url(/cityscape.jpg) no-repeat center fixed; 
    -webkit-background-size: cover; /* pour anciens Chrome et Safari */
    background-size: cover; /* version standardis√©e */
}

#home header 
{
    position: absolute;
    top: 0;
    left: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background: none;
}

#home #tag
{
    margin-top: 25px;
    background: white;
    color: #696194;
    border: 1px solid #564F7B;
}

/*** PlaceHolder ***/
#home #tag::-webkit-input-placeholder {
   color: #928BB4;
}

#home #tag:-moz-placeholder { /* Firefox 18- */
   color: #928BB4;  
}

#home #tag::-moz-placeholder {  /* Firefox 19+ */
   color: #928BB4;  
}

#home #tag:-ms-input-placeholder {  
   color: #928BB4;  
}

#home .titre {
    font-size: 18px;
}

#home #logo
{
    margin-top:0.2em;
    margin-left:0.2em;
    vertical-align:bottom;
    width: 24px;
}

#home .accroche
{
    margin-top:200px;
    text-align:center;
}

#home .accroche h1
{
    margin-bottom:100px;
}

#home .accroche p {
    font-size: 1.5em;
}

#home .accroche p.suggest {
    margin-top: 35px;
    font-size: 1em;
    font-style: italic;
}

@media (max-width: 1360px) {
    
    header form {
        margin-left:260px;
    }
    
    #tag {
        width: 100%;
    }
    
    #home header form {
        margin-left:0;
    }
    
    #home #tag {
        width:80%;
        margin: auto;
    }
    
    .options {
        width : 100%;
    }
}

@media (max-width: 800px) {
    
    #home #tag {
        margin-bottom: 150px;
    }
}





