<header>
    <div class="titre">
        <h1>
            <img src="/favicon.png" alt="logo SATélite" id="logo">
            SATelite
        </h1>
    <p class="sentat">Sentiment Analysis on Tumblr</p>
    </div>
            <form action="/analyse" method="post" id="form">
                <input type="search" id="tag" name="tag" placeholder="Tag" value="<% if(locals.tag) { %><%= tag %><% } %>"/>
                <p id="deploy">Options avancées <i class="fa fa-angle-double-down" aria-hidden="true"></i></p>
                <div class="options">
                    <input type="text" placeholder="Nombre de posts analysés (Défaut : 400)" name="nbPosts" value="400"/>
                    <select id="algo" name="algo">
                       <option value="basic">Algorithme simple</option>
                       <option value="custom">Algorithme personnalisé</option>
                    </select> 
                    <div id="basic">
                        <label><input type="checkbox" name="load" id="load" value="true"/> Négation</label>
                        <label><input type="checkbox" name="amplification" id="amplification" value="true"/> Amplification</label>
                        <label><input type="checkbox" name="ponderationParPhrase" id="ponderationParPhrase" value="true"/> Harmonisation</label>
                        <label><input type="checkbox" name="ponderationParNombre" id="ponderationParNombre" value="true"/> Pondération sur note</label>
                        <label><input type="checkbox" name="moyenne" id="moyenne" value="true"/> Scores équilibrés</label>
                         <label><input type="checkbox" name="tfidf" id="tfidf" value="true"/> TF-IDF</label>
                    </div>
                    <div id="custom">
                        <textarea name="script" id="script" placeholder="Entrez votre script ici"></textarea>
                    </div>
                    <input type="submit" value="Submit"/>
                </div>
            </form>
</header>